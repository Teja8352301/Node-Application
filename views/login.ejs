<%- include('../includes/Header.ejs') %>
<%- include('../includes/Materialize.ejs') %>
<%- include('../includes/Navbar.ejs',{logged:logged}) %>

<form class="m-3 d-flex flex-column align-items-center" action="/postLogin" method="POST">
  <% if(errMsg){ %> 
    <p class="list-group-item col-lg-6 bg-light text-danger  col-sm-12 m-3" style="font-weight: 500;"><%= errMsg %></p>
    <% } %>
    <div class="form-group col-lg-6">
      <label for="email" style="font-weight: 500;">Email</label>
      <input style="font-weight: 500;" type="email" class="form-control" id="email" placeholder="email" name="email">
    </div>
    <div class="form-group col-lg-6">
      <label style="font-weight: 500;" for="password">Password</label>
      <input style="font-weight: 500;" type="text" class="form-control" id="password" placeholder="password" name="password">
    </div>
    <button type="submit" class="btn btn-primary col-lg-6" style="font-weight: 500;">Login</button>
    <!-- <button type="submit" class="btn btn-primary col-lg-6 m-3">Forgot Password</button> -->
  </form>

<%- include('../includes/Footer.ejs') %>