<%- include('../includes/Header.ejs') %>
<%- include('../includes/Materialize.ejs') %>
<%- include('../includes/Navbar.ejs',{logged:logged}) %>

<ul class="p-0">
    <% if(orders.length) { %> 
        <% if(orders.forEach(order=>{ %> 
   <li class=" col-lg-8 d-lg-flex m-3 justify-content-lg-around d-sm-block col-sm-12">
    <p class="list-group-item col-lg-8 bg-light text-primary  col-sm-12" style="font-weight: 600;"><%= order.id %></p>
    <p class="m-2 d-sm-block d-lg-none"></p>
    <button class="btn btn-primary col-lg-2  col-sm-12" style="font-weight: 600;">Price:<%= order.totalPrice %></button>
   </li>
   <form method="POST" action="/invoice/<%= order.id %>" class="col-lg-8 m-3" style="height: 100%;">
    <button class="btn btn-warning text-white col-lg-12  col-sm-12" style="font-weight: 600;">In-voice</button>
</form>
   <hr class="m-2 d-sm-block d-lg-none"/>
   <%}))%>
   <%} else{%>
    <h2 class="text-primary m-3">No Orders Found</h2>
    <% } %>
</ul>

<%- include('../includes/Footer.ejs') %>