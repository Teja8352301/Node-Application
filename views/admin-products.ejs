<%- include('../includes/Header.ejs') %>
<%- include('../includes/Materialize.ejs') %>
<%- include('../includes/Navbar.ejs',{logged:logged}) %>

<div class="d-flex justify-content-around flex-wrap">
  <% if(data.length>0) {%>
    <% data.forEach((val)=>{ %>
    <div class="card text-center text-primary border border-primary m-5" style="width:350px;height: 400px;">
      <div class="card-header  border-primary" style="width: 100%;height: 15%;">
        <h3 style="font-weight: 500;"><%= val.title %></h3>
      </div>
      <div class="card-body" style="width: 100%;height: 70%;">
        <img style="width: 100%;height: 70%;" src="<%= val.imageUrl %>" alt="Book">
        <div class="align-middle" style="height: 30%;">
          <h4 class="text-primary m-1" style="font-weight: 500;">Price : $<%= val.price %></h4>
          <h4 style=" font-weight: 500;"><%= val.description %></h4>
      </div>
      </div>
      <div class="card-footer text-muted d-flex justify-content-around border-primary" style="height: 15%;">
       <!-- <div class="col"> -->
         <!-- <form>
         <a class="btn btn-primary text-white" href="/add-to-cart">Add to Cart</a>
        </form> -->
        <form action="/admin/editProduct/<%= val.id %>" method="POST">
          <!-- <input type="text" name="productId" value="<%= val.id %>" hidden> -->
         <button type="submit" class="btn btn-primary text-white" style="font-weight: 600;">Edit</button>
        </form>

        <form action="/admin/deleteProduct/<%= val.id %>" method="POST">
          <!-- <input type="text" name="productId" value="<%= val.id %>" hidden> -->
         <button type="submit" class="btn btn-primary text-white" style="font-weight: 600;">Delete</button>
        </form>
       <!-- </div> -->
      </div>
    </div>
    <% }) %>
    <% }else{ %>
      <h2 class="text-primary m-3">No Data Found</h2>
      <% } %>
  </div>

  <%- include('../includes/Footer.ejs') %>