<form class="m-3 d-flex flex-column align-items-center" action="/postSignup" method="POST">
    <div class="form-group col-lg-6">
      <label for="email"  style="font-weight: 500;">Email</label>
      <input type="email"  style="font-weight: 500;" class="form-control" id="email" placeholder="email" name="email">
    </div>
    <div class="form-group col-lg-6">
      <label for="password"  style="font-weight: 500;">Password</label>
      <input type="text"  style="font-weight: 500;" class="form-control" id="password" placeholder="password" name="password">
    </div>
    <div class="form-group col-lg-6">
        <label for="password"  style="font-weight: 500;">Re-enter Password</label>
        <input type="text"  style="font-weight: 500;" class="form-control" id="password" placeholder="password" name="repassword">
      </div>
    <button type="submit"  style="font-weight: 500;" class="btn btn-primary col-lg-6">Sign Up</button>
    <!-- <button type="submit" class="btn btn-primary col-lg-6 m-3">Forgot Password</button> -->
  </form>

